@model Xynthesis.Modelo.xy_subscriber
@{
    ViewBag.Title = "Eliminar Usuarios";
    var msg = ViewBag.Message;
}
<div class="container">
    <br />
    <div class="text-center">
        <h2>Eliminar usuario</h2>
    </div>
    <br />
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="dl-horizontal">
            <div class="form-group row">
                <div class="text-right">
                    <label class="control-label col-md-2">Nombres</label>
                </div>
                <div class="col-md-10">
                    <input type="text" class="form-control" value="@Model.Nom_Subscriber" disabled="disabled" />
                </div>
            </div>
            <div class="form-group row">
                <div class="text-right">
                    <label class="control-label col-md-2">Usuario de Red</label>
                </div>
                <div class="col-md-10">
                    <input type="text" class="form-control" value="@Model.Nom_DomainUser" disabled="disabled" />
                </div>
            </div>

            <div class="form-group row">
                <div class="text-right">
                    <label class="control-label col-md-2">Sucursal</label>
                </div>
                <div class="col-md-10">
                    @Html.DropDownListFor(model => model.IdSucursal, ViewBag.Sucursal as IEnumerable<SelectListItem>, new { @class = "form-control", @disabled= "disabled" })
                </div>
            </div>

            <div class="form-group row">
                <div class="text-right">
                    <label class="control-label col-md-2">Área</label>
                </div>
                <div class="col-md-10">
                    @Html.DropDownListFor(model => model.Ide_CostCenter, ViewBag.Area as IEnumerable<SelectListItem>, new { @class = "form-control", @disabled = "disabled" })
                </div>
            </div>
            
            <div class="form-group row">
                <div class="text-right">
                    <label class="control-label col-md-2">Tipo</label>
                </div>
                <div class="col-md-10">
                    @if (Model.Tip_Subscriber != null)
                    {
                        if (Model.Tip_Subscriber.Equals("E"))
                        {
                            <input type="text" class="form-control" value="Empleado" disabled="disabled" />
                            @*<label>Empleado</label>*@
                        }
                        else
                        {
                            <input type="text" class="form-control" value="Cliente" disabled="disabled" />
                            @*<label>Cliente</label>*@
                        }
                    }
                    @*<input type="text" class="form-control" value="@Model.Tip_Subscriber" />*@
                </div>
            </div>
            <div class="form-group row">
                <div class="col-md-offset-2 col-md-10">
                    <a role="button" class="btn btn-success" onclick="location.href='@Url.Action("Index", "Usuarios")'">Regresar</a>
                    @if (msg != null)
                    {
                        <input type="submit" value="Eliminar" class="btn btn-success" disabled="disabled" />
                    }
                    else
                    {
                        <input type="submit" value="Eliminar" class="btn btn-success" />
                    }
                </div>
            </div>
        </div>
        <div class="modal-dialog modal-lg">
            <div class="boton alert-danger col-md-7">@ViewBag.message </div>
        </div>

    }

</div>
