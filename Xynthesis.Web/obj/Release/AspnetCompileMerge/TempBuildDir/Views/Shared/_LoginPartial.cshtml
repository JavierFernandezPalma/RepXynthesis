            <a role="button" onclick="location.href='@Url.Action("CerrarSesion", "Acceso")'"><span><i class="fas fa-sign-out-alt" aria-hidden="true"></i></span> Cerrar Sesi­ón</a>
        </li>
        @*<li class="hidden-xs hidden-sm hidden-md"><a>@DateTime.Now <span class="glyphicon glyphicon-time"></span></a></li>*@
        <li class="hidden-xs hidden-sm hidden-md"><a id="reloj">reloj <span class="glyphicon glyphicon-time"></span></a></li>

    </ul>
            }
            }
            else
            {
    <ul class="nav navbar-nav navbar-right">
        <li><a role="button" onclick="location.href='@Url.Action("Login", "Acceso",new {  })'"><i class="fa fa-sign-in" aria-hidden="true"></i>&nbsp; Iniciar Sesion</a></li>
    </ul>
            }


<SCRIPT>
    var tick;

    window.onload = function () {
        var ut = new Date();
        var h, m, s;
        var time = "        ";
        var dd = ut.getDate();
        var mm = ut.getMonth() + 1;
        var yyyy = ut.getFullYear();
        h = ut.getHours();
        m = ut.getMinutes();
        s = ut.getSeconds();
        if (s <= 9) s = "0" + s;
        if (m <= 9) m = "0" + m;
        if (h <= 9) h = "0" + h;
        time += dd + "/" + mm + "/" + yyyy + " " + h + ":" + m + ":" + s;
        document.getElementById('reloj').innerHTML = time;
        tick = setTimeout("simple_reloj()", 1000);
    };

