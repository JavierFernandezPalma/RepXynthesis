            @if (Session["Nom_DomainUser"] != null && Session["LoginDominio"] == null)
            {
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><i class="fa fa-user dropdown-toggle " aria-hidden="true"></i>&nbsp; @Session["Nom_Subscriber"].ToString() <span class="caret hidden-lg" style="color:#FFFFFF;"></span></a>
            }
            else
            {
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><i class="fa fa-user dropdown-toggle " aria-hidden="true"></i>&nbsp; @Session["Usuario"].ToString() <span class="caret hidden-lg" style="color:#FFFFFF;"></span></a>
            }
            <ul class="dropdown-menu list-group-item-danger multi-level hidden-lg" role="menu" aria-labelledby="dropdownMenu">
                <li class="dropdown-submenu list-group-item-danger ">
                    <a role="button" style="color:#FFFFFF;" onclick="location.href='@Url.Action("CerrarSesion", "Acceso")'"><span><i class="fa fa-sign-out" aria-hidden="true"></i></span> Cerrar Sesi­ón</a>
