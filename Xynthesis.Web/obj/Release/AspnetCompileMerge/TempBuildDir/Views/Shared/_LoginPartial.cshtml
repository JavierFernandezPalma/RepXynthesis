@if (Session["Nom_DomainUser"] != null || Session["LoginDominio"] != null)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

    <ul class="nav navbar-nav navbar-right text-bold">
        @*<li>
                <a ><i class="fa fa-user" aria-hidden="true"></i>&nbsp; @Session["Nom_Subscriber"].ToString()</a>
            </li>*@
