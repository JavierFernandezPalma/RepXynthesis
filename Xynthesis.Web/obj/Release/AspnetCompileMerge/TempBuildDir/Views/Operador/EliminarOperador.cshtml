@model Xynthesis.Modelo.xy_operators

@{
    ViewBag.Title = "Eliminar Operadores";
    var msg = (Xynthesis.Utilidades.Mensaje)ViewBag.mensaje;
}
<div class="container">
    <br />
    <div class="text-center">
        <h2>Eliminar operador</h2>
    </div>
    <br />
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div>
            <div class="dl-horizontal">
                <div class="form-group row">
                    <div class="text-right">
                        <label class="control-label col-md-2">Código Operador</label>
                    </div>
                    <div class="col-md-10">
                        <input type="text" class="form-control" value="@Model.Cod_Operator" disabled="disabled" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="text-right">
                        <label class="control-label col-md-2">Nombre Operador</label>
                    </div>
                    <div class="col-md-10">
                        <input type="text" class="form-control" value="@Model.Nom_Operator" disabled="disabled" />
                    </div>
                </div>

                @Html.HiddenFor(model => model.Ide_Coverage)
                <div class="form-group row">
                    <div class="col-md-offset-2 col-md-10">
                        <a role="button" class="btn btn-success" onclick="location.href='@Url.Action("Index", "Operador")'">Regresar</a>
                        @if (msg.codigo == 1)
                        {
                            <input type="submit" value="Eliminar" class="btn btn-success" disabled="disabled" />
                        }
                        else
                        {
                            <input type="submit" value="Eliminar" class="btn btn-success" />
                        }
                    </div>
                </div>
                <div class="modal-dialog modal-lg">
                    <div class="boton alert-danger col-md-7">
                        @if (msg.codigo == 1)
                        {@msg.mensaje;
                        }
                    </div>
                </div>
                <div class="modal-dialog modal-lg">
                    <div class="boton alert-success col-md-7">
                        @if (msg.codigo == 0)
                        {@msg.mensaje}
                    </div>
                </div>

            </div>


        </div>
    }
</div>
